<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Mile.Xaml</id>
    <version>1.0.360.0</version>
    <description>Provides the modern Windows style to Windows.UI.Xaml for desktop applications with XAML Islands.</description>
    <authors>Kenji Mouri</authors>
    <projectUrl>https://github.com/ProjectMile/Mile.Xaml</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="file">License.md</license>
    <readme>ReadMe.md</readme>
    <dependencies>
      <group targetFramework="uap10.0" />
    </dependencies>
    <repository type="git" url="https://github.com/ProjectMile/Mile.Xaml.git" />
  </metadata>
  <files>

    <file src="..\Output\Binaries\Release\x64\Mile.Xaml.winmd"   target="lib\uap10.0" />

    <file src="..\Output\Binaries\Release\Win32\Mile.Xaml.dll" target="runtimes\win10-x86\native"/>
    <file src="..\Output\Binaries\Release\Win32\Mile.Xaml.pdb" target="runtimes\win10-x86\native"/>

    <file src="..\Output\Binaries\Release\x64\Mile.Xaml.dll" target="runtimes\win10-x64\native"/>
    <file src="..\Output\Binaries\Release\x64\Mile.Xaml.pdb" target="runtimes\win10-x64\native"/>

    <file src="..\Output\Binaries\Release\ARM64\Mile.Xaml.dll" target="runtimes\win10-arm64\native"/>
    <file src="..\Output\Binaries\Release\ARM64\Mile.Xaml.pdb" target="runtimes\win10-arm64\native"/>

    <file src="Mile.Xaml.props" target="build\native"/>
    <file src="Mile.Xaml.targets" target="build\native"/>
    <file src="MrtCore.PriGen.targets" target="build\native"/>

    <file src="..\ReadMe.md" target="."/>
    <file src="..\License.md" target="."/>
    <file src="..\ReleaseNotes.md" target="."/>

  </files>
</package>